<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_first_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">

        <TextView
            style="@style/BlackDetailTextView"
            android:text="告警名称：" />

        <TextView
            android:id="@+id/warnTitle"
            style="@style/GrayDetailTextView"
            android:text="违停告警" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">

        <TextView
            style="@style/BlackDetailTextView"
            android:text="告警时间：" />

        <TextView
            android:id="@+id/warnTime"
            style="@style/GrayDetailTextView"
            android:text="2018-12-17 10:22:58" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">

        <TextView
            style="@style/BlackDetailTextView"
            android:text="告警内容：" />

        <TextView
            android:id="@+id/warnContent"
            style="@style/GrayDetailTextView"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="江宁东三街道旅游违停占用人行通道" />
    </LinearLayout>
</LinearLayout>