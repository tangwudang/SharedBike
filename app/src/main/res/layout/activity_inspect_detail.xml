<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_first_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">

        <TextView
            style="@style/BlackDetailTextView"
            android:text="巡检人员：" />

        <TextView
            android:id="@+id/dutyName"
            style="@style/GrayDetailTextView"
            android:text="王晓明" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">

        <TextView
            style="@style/BlackDetailTextView"
            android:text="巡检时间：" />

        <TextView
            android:id="@+id/inspectTime"
            style="@style/GrayDetailTextView"
            android:text="2018-12-17 10:22:58" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">

        <TextView
            style="@style/BlackDetailTextView"
            android:text="上报地点：" />

        <TextView
            android:id="@+id/inspectAddress"
            style="@style/GrayDetailTextView"
            android:text="江宁区秣周东路12号" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">

        <TextView
            style="@style/BlackDetailTextView"
            android:text="上报类型：" />

        <TextView
            android:id="@+id/inspectType"
            style="@style/GrayDetailTextView"
            android:text="车辆违停" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">

        <TextView
            style="@style/BlackDetailTextView"
            android:text="备注内容：" />

        <TextView
            android:id="@+id/inspectContent"
            style="@style/GrayDetailTextView"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="违停占用人行通道" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/detail_line_margin"
        android:layout_marginRight="@dimen/margin_left_right">
        <TextView
            android:id="@+id/livePicture"
            style="@style/BlackDetailTextView"
            android:text="现场照片：" />

        <GridView
            android:id="@+id/picture_gridview"
            android:layout_toRightOf="@id/livePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:gravity="center"
            android:horizontalSpacing="10mm"
            android:verticalSpacing="10mm"
            android:listSelector="#00000000"
            android:numColumns="2"
            android:scrollbars="none"
            android:stretchMode="columnWidth">
        </GridView>
    </RelativeLayout>

</LinearLayout>