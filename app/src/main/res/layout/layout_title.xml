<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100mm"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:onClick="onTopLeftClick"
        android:paddingLeft="30mm"
        android:paddingRight="30mm"
        android:paddingTop="25mm"
        android:paddingBottom="25mm"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textSize="32mm"/>

    <TextView
        android:id="@+id/title_right"
        android:textSize="26mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="20mm"
        android:paddingRight="30mm"
        android:visibility="gone" />

</RelativeLayout>
