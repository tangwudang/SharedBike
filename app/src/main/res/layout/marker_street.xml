<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200mm"
    android:layout_height="233mm">

    <ImageView
        android:id="@+id/marker_background"
        android:layout_width="200mm"
        android:layout_height="233mm"
        android:src="@drawable/marker_street"/>

    <TextView
        android:id="@+id/marker_title"
        android:text="南京航空航天大学"
        android:textSize="22mm"
        android:textColor="@color/white"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80mm"
        android:maxWidth="90mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>